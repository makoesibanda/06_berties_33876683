<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Bargain Books</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>

  <body>
    <h1>Bargain Books (Under £20)</h1>

    <% if (bargainBooks.length > 0) { %>
      <ul>
        <% bargainBooks.forEach(function (book) { %>
          <li><%= book.name %> - £<%= book.price %></li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No bargain books available.</p>
    <% } %>

    <p><a href="/">Home</a></p>
    <p><a href="/books/list">View All Books</a></p>
  </body>
</html>
